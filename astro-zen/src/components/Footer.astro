---
import type { SiteConfig } from "@types";

type Props = Pick<SiteConfig, "author" | "socialLinks">;

const { author, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer
  class="w-full border-t border-grey-200 px-5 pt-5 pb-8 text-center text-grey-900 bg-grey-50"
>
  <ul class="mb-5 flex flex-wrap justify-center gap-x-5 text-xs">
    {
      socialLinks.map(({ text, href }) => (
        <li>
          <a
            href={href}
            target="_blank"
            class="inline-block px-4 py-3 text-grey-600 hover:text-blue-600 transition-colors after:relative after:bottom-[-4px] after:content-[url(/external.svg)]"
          >
            {text}
          </a>
        </li>
      ))
    }
  </ul>
  <p class="text-xs">
    {author} Â© {currentYear}. <span class="text-grey-500"
      >Designed & Developed</span
    > 
  </p>
</footer>
