---
import { formatDate } from '@lib/utils';
import ExternalIcon from '@icons/ExternalIcon.astro';
import GithubIcon from '@icons/GithubIcon.astro';

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  heroImage: string;
  technologies: string[];
  liveUrl?: string;
  githubUrl?: string;
  status: 'completed' | 'in-progress' | 'planned';
}

const { title, description, publishDate, heroImage, technologies, liveUrl, githubUrl, status } = Astro.props;

const statusColors = {
  completed: 'bg-green-500/20 text-green-400',
  'in-progress': 'bg-yellow-500/20 text-yellow-400',
  planned: 'bg-blue-500/20 text-blue-400'
};

const statusLabels = {
  completed: 'Completed',
  'in-progress': 'In Progress',
  planned: 'Planned'
};
---

<article class="py-24 md:py-32">
  <!-- Back to projects link -->
  <div class="mb-8">
    <a 
      href="/projects" 
      class="inline-flex items-center text-sm text-grey-600 hover:text-blue-600 transition-colors"
    >
      ← Back to Projects
    </a>
  </div>

  <!-- Hero Image -->
  <div class="mb-8 overflow-hidden rounded-lg">
    <img 
      src={heroImage} 
      alt={title}
      class="w-full h-64 md:h-80 object-cover"
    />
  </div>

  <!-- Project Header -->
  <header class="mb-12">
    <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
      <h1 class="font-serif text-4xl font-bold tracking-tighter text-grey-900 md:text-5xl lg:text-6xl">
        {title}
      </h1>
      
      <div class="flex items-center gap-3">
        {liveUrl && (
          <a 
            href={liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors"
          >
            <ExternalIcon class="w-4 h-4" />
            Live Demo
          </a>
        )}
        
        {githubUrl && (
          <a 
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 border border-grey-300 text-grey-900 rounded-lg text-sm font-medium hover:border-grey-400 transition-colors"
          >
            <GithubIcon class="w-4 h-4" />
            Source Code
          </a>
        )}
      </div>
    </div>
    
    <p class="mb-6 text-lg text-grey-600 leading-relaxed">
      {description}
    </p>

    <div class="flex flex-wrap items-center gap-4 text-sm">
      <time datetime={publishDate.toISOString()} class="text-grey-500">
        {formatDate(publishDate)}
      </time>
      
      <span class="text-grey-500">•</span>
      
      <span class={`px-2 py-1 rounded text-xs font-medium ${statusColors[status]}`}>
        {statusLabels[status]}
      </span>
      
      {technologies.length > 0 && (
        <>
          <span class="text-grey-500">•</span>
          <div class="flex flex-wrap gap-2">
            {technologies.map((tech) => (
              <span class="px-2 py-1 bg-grey-100 text-grey-600 rounded text-xs">
                {tech}
              </span>
            ))}
          </div>
        </>
      )}
    </div>
  </header>

  <!-- Project Content -->
  <div class="prose prose-lg max-w-none">
    <slot />
  </div>

  <!-- Project Footer -->
  <footer class="mt-16 pt-8 border-t border-grey-200">
    <div class="flex items-center justify-between">
      <a 
        href="/projects" 
        class="inline-flex items-center text-sm text-grey-600 hover:text-blue-600 transition-colors"
      >
        ← Back to Projects
      </a>
      
      <div class="flex items-center gap-4">
        {(liveUrl || githubUrl) && (
          <>
            <span class="text-sm text-grey-500">Links:</span>
            {liveUrl && (
              <a 
                href={liveUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-grey-600 hover:text-blue-600 transition-colors"
              >
                Live Demo
              </a>
            )}
            {githubUrl && (
              <a 
                href={githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-grey-600 hover:text-blue-600 transition-colors"
              >
                GitHub
              </a>
            )}
          </>
        )}
      </div>
    </div>
  </footer>
</article>